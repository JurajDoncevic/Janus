@model IEnumerable<Janus.Communication.Remotes.RemotePoint>

@{
    ViewData["Title"] = "Remote points";
}

<h2>Registered remote points</h2>

<p>
    <a asp-action="RegisterRemotePoint" class="btn btn-primary">Register a new remote point</a>
    <a asp-action="PingRemotePoint" class="btn btn-primary">Send HELLO to a remote point</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NodeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Port)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemotePointType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NodeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Port)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Enum.GetName(item.RemotePointType))
            </td>
            <td>
                <a asp-action="UnregisterRemotePoint" asp-route-id="@item.NodeId" class="btn btn-danger">Send BYE</a>
            </td>
        </tr>
}
    </tbody>
</table>
