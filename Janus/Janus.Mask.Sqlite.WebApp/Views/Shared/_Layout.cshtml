<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Janus Mask - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Janus.Mask.LiteDB.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Content/Images/janus_logo.png" style="max-height:72px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RemotePoints" asp-action="Index">Remote points</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link link-dark dropdown-toggle" id="navbarSchemaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Schema management
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarSchemaDropdown">
                                <li><a class="dropdown-item" asp-controller="Schema" asp-action="CurrentSchema">Current schema</a></li>
                                <li><a class="dropdown-item" asp-controller="Schema" asp-action="SchemaLoading">Schema loading</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link link-dark dropdown-toggle" id="navbarSchemaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Querying
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarSchemaDropdown">
                                <li><a class="dropdown-item" asp-controller="Querying" asp-action="Index">Querying on loaded schema</a></li>
                                <li><a class="dropdown-item" asp-controller="Querying" asp-action="QueryRemotePoint">Querying on a remote point</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link link-dark dropdown-toggle" id="navbarSchemaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Commanding
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarSchemaDropdown">
                                <li><a class="dropdown-item" asp-controller="Commanding" asp-action="Index">Commanding on loaded schema</a></li>
                                <li><a class="dropdown-item" asp-controller="Commanding" asp-action="CommandRemotePoint">Commanding on a remote point</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Janus Mask
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
