@model Janus.Wrapper.Sqlite.WebApp.ViewModels.CommandingViewModel

@{
    ViewData["Title"] = "Commanding on a mediated schema";
}
<h2>Commanding</h2>
<hr />
<div class="row mt-2 mb-2">
    <div class="col-6">
        <div class="row">
            <h4>Command text</h4>
            @if (Model.OperationOutcome is not null)
            {
                @if (Model.OperationOutcome.IsSuccess)
                {
                    <span class="alert alert-success">@Model.OperationOutcome.Message</span>
                }
                else
                {
                    <span class="alert alert-warning">@Model.OperationOutcome.Message</span>
                }
            }
        </div>
        <form asp-action="RunCommand" method="post">
            <textarea name="commandText" class="form-control" rows="15" type="text">@Model.CommandText</textarea>
            <input type="submit" class="btn btn-primary mt-2" value="Run command!" />
        </form>

    </div>
    <div class="col-6">
        <h4>Current inferred schema</h4>
        <pre id="schema-json" class="overflow-scroll border rounded-1 border-1 border-dark border-opacity-25" style="height:70vh">
            @Model.InferredDataSourceJson
    </pre>
    </div>
</div>

@section Scripts{
    <script>
        let data = JSON.parse(document.getElementById("schema-json").innerText)
        document.getElementById("schema-json").textContent = JSON.stringify(data, undefined, 2);
    </script>
}